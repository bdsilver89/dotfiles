// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  // Fonts
  "ui_font_size": 16,
  "buffer_font_size": 15,
  // Vim mode
  "vim_mode": true,
  "relative_line_numbers": true,
  "cursor_blink": false,
  // Scrolling behavior (vim scrolloff equivalent)
  "vertical_scroll_margin": 8,
  "scrollbar": {
    "show": "always",
    "git_diff": true,
    "diagnostics": "all",
    "selected_symbol": true
  },
  // Theme
  "icon_theme": "Catppuccin Mocha",
  "theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha"
  },
  // Tab bar
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false
  },
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  // Editor
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "soft_wrap": "none",
  "show_whitespaces": "selection",
  "preferred_line_length": 100,
  "show_wrap_guides": true,
  "wrap_guides": [80, 100],
  // Auto-save
  "autosave": "on_focus_change",
  // LSP and inlay hints (not enabled by default)
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "edit_debounce_ms": 700
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy"
        }
      }
    }
  },
  // Git
  "git": {
    "inline_blame": {
      "enabled": true,
      "delay_ms": 600
    }
  },
  // Project panel
  "project_panel": {
    "button": true,
    "default_width": 300,
    "dock": "left",
    "auto_reveal_entries": true,
    "auto_fold_dirs": true
  },
  // Outline panel
  "outline_panel": {
    "dock": "right",
    "default_width": 300
  },
  // Terminal
  "terminal": {
    "blinking": "off",
    "font_size": 14,
    "working_directory": "current_project_directory",
    "shell": {
      "program": "zsh"
    },
    "dock": "bottom",
    "default_height": 400
  },
  // Assistant
  "agent": {
    "dock": "right",
    "default_width": 640,
    "button": true
  },
  // Performance
  "edit_predictions": {
    "disabled_globs": [
      "**/.git",
      "**/.svn",
      "**/.hg",
      "**/CVS",
      "**/.DS_Store",
      "**/Thumbs.db",
      "**/.classpath",
      "**/.settings",
      "**/.vscode",
      "**/.idea",
      "**/node_modules",
      "**/.serverless",
      "**/build",
      "**/dist",
      "**/coverage",
      "**/venv",
      "**/__pycache__",
      "**/.ropeproject",
      "**/.pytest_cache",
      "**/.ruff_cache"
    ],
    "mode": "eager"
  },
  // Language-specific settings
  "languages": {
    "JavaScript": {
      "tab_size": 2,
      "formatter": "prettier"
    },
    "TypeScript": {
      "tab_size": 2,
      "formatter": "prettier"
    },
    "TSX": {
      "tab_size": 2,
      "formatter": "prettier"
    },
    "JSON": {
      "tab_size": 2,
      "formatter": "prettier"
    },
    "Python": {
      "tab_size": 4,
      "format_on_save": "on"
    },
    "Rust": {
      "tab_size": 4,
      "format_on_save": "on"
    },
    "Go": {
      "tab_size": 4,
      "hard_tabs": true,
      "format_on_save": "on"
    }
  }
}
